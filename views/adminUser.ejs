<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard</title>
  <!-- Favicon -->
  <link rel="icon" type="image/png" href="../Images/Logo.png" />
  <!-- Google Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Merriweather+Sans:wght@400;500;600;700;800&display=swap"
    rel="stylesheet" />
  <!-- Stylesheet -->
  <link rel="stylesheet" href="../../CSS/main.css" />
  <link rel="stylesheet" href="../../CSS/toast.css" />

  <script async src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
  <!-- Custom JavaScript -->
  <script defer src="../../JS/dashboard.js"></script>
</head>

<body class="bg-darkNavy">
  <%- include("partials/adminSidebar"); -%>
    <section>
      <div class="flex flex-col items-center justify-center">
        <div class="mt-20 text-center">
          <h1 class="text-2xl text-gold font-bold md:text-4xl">Users</h1>
          <h4 class="text-sm mt-2 text-gray-500 ml-14 md:text-base md:ml-0">
            Total Of <span class="text-white"><%= users.length %></span>  Accounts.
          </h4>
        </div>

        <table class="ml-10 mt-12 mb-1 border-collapse w-3/4 text-xs md:text-sm bg-veryDarkWhite md:ml-0 rounded-md">
          <thead class="">
            <tr class=" text-center h-16 border-b-2 border-cyan-500">
              <th class="w-1/4 border border-slate-300 dark:border-slate-600 font-semibold text-center">
                Username</th>
              <th class="w-1/4 border border-slate-300 dark:border-slate-600 font-semibold text-center">
                Account balance</th>
              <th class="w-1/4 border border-slate-300 dark:border-slate-600 font-semibold text-center">
                Registration Date</th>
            </tr>
          </thead>
          <tbody>

            <% users.forEach(user=> {%>
              <tr class="border-b-1 h-10">
                <td class="border capitalize text-center">
                  <a href="/user/admin/profile/<%= user._id %>">
                    <%= user.username || user.name%>
                  </a>
                </td>
                <td class="border text-center">
                  $<%= user.balance %>
                </td>
                <td class="border capitalize text-center">
                  <%= user.createdAt.toLocaleDateString() %>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
    </section>
    <%- include ("partials/script"); -%>
</body>

</html>