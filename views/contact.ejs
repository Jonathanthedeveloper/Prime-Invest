  <body class="bg-darkNavy">
    <!-- Nav Bar -->
    <%- include("partials/nav"); -%>
    <section class="bg-white">
      <div
        class="flex flex-col items-center justify-center mt-10 h-40 bg-darkNavy"
      >
        <div class="my-auto">
          <h1 class="text-4xl font-bold text-gold text-center">CONTACT US</h1>
        </div>
      </div>
      <div
        class="body flex flex-col space-y-4 bg-white -mt-10 mx-auto shadow-2xl md:flex-row md:space-y-0 md:space-x-20"
      >
        <div class="p-4 md:w-1/3 md:ml-10">
          <h2 class="mt-4 text-darkNavy text-2xl font-bold">Details</h2>
          <h4 class="mt-6 text-gold font-bold">Telephone</h4>
          <p class="mt-2 font-sm text-darkNavy"> +447458948030</p>
          <h4 class="mt-4 text-gold font-bold">Address</h4>
          <p class="mt-2 font-sm text-darkNavy">
            Unit 24 Highcroft Industrial Estate Enterprise Road, Horndean,
            Waterlooville, United Kingdom
          </p>
          <h4 class="mt-4 text-gold font-bold">Email</h4>
          <p class="mt-2 font-sm text-darkNavy">
            admin@millenniuminvestment.net
            support@millenniuminvestment.net
          </p>
        </div>
        <div class="mt-4 p-4 md:w-2/3 ml-10">
          <form class="md:mt-4" action="mailto:support@millenniuminvestment.com" method="post" enctype="text/plain">
            <p>
              <input
                class="border-primaryBlue border-solid border-2 p-1 w-4/5 rounded-lg placeholder:text-center placeholder:font-light placeholder:text-sm placeholder:text-gray-400 focus:outline-darkNavy"
                type="text"
                id="name"
                name="name"
                placeholder="Enter Your Full Name"
                required
              />
            </p>
            <p class="mt-4">
              <input
                class="border-primaryBlue border-solid border-2 p-1 w-4/5 rounded-lg placeholder:text-center placeholder:font-light placeholder:text-sm placeholder:text-gray-400 focus:outline-darkNavy"
                type="text"
                id="email"
                name="email"
                placeholder="Enter Your Email Address"
                required
              />
            </p>
            <p class="mt-4">
              <input
                class="border-primaryBlue border-solid border-2 p-1 w-4/5 rounded-lg placeholder:text-center placeholder:font-light placeholder:text-sm placeholder:text-gray-400 focus:outline-darkNavy"
                type="text"
                id="subject"
                name="subject"
                placeholder="Enter The Subject"
                required
              />
            </p>
            <p class="mt-4">
              <textarea
                placeholder="Enter The Message"
                class="p-4 shadow-2xl w-4/5 h-40 focus:outline-darkNavy placeholder:text-center"
                name="contactMessage"
                id="contactMessage"
              ></textarea>
            </p>
            <p class="mt-6">
              <input
              type="submit"
                class="py-2 px-10 duration-1000 text-darkNavy border-2 border-darkNavy rounded-lg baseline hover:bg-darkNavy hover:text-gold"
                value =Send />
            </p>
          </form>
        </div>
      </div>
    </section>
    <!-- Footer -->
    <%- include("partials/footer"); -%>
    <script src="../JS/aboutUS.js"></script>
  </body>
</html>
