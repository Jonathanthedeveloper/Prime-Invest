<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard</title>
  <!-- Favicon -->
  <link rel="icon" type="image/png" href="../Images/Logo.png" />
  <!-- Google Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Merriweather+Sans:wght@400;500;600;700;800&display=swap"
    rel="stylesheet" />
  <!-- Stylesheet -->
  <link rel="stylesheet" href="../CSS/main.css" />
  <link rel="stylesheet" href="../CSS/toast.css">

  <script async src="https://unpkg.com/sweetalert/dist/sweetalert.min.js" crossorigin="anonymous"></script>

  <!-- Custom JavaScript -->
  <script defer src="../JS/dashboard.js"></script>

</head>

<body class="bg-darkNavy">
  <div class="grid grid__wrapper">
    <div class="sidebar relative">
      <%- include("partials/sidebar"); -%>
    </div>
    <section>
      <div class="toast info">
        <p class="toast__message mx-auto">
          Finish creating your account <a style="text-decoration: underline; font-weight: 400; color: blueviolet;"
            href="/user/profile">here</a>
        </p>
        <button>&times;</button>
      </div>
      <div class="flex flex-col items-center md:flex-row">
        <div
          class="flex flex-row justify-between items-center p-4 bg-gold w-full h-14 mt-10 border-b-4 border-white md:w-1/2">

          <!-- <%=user%> -->


          <p class="ml-20 text-xs md:text-base">Account Summary</p>
          <a href="/user/transactions"
            class="cursor-pointer duration-700 text-xs md:text-base rounded-lg bg-darkNavy px-4 h-10 text-gold hover:bg-white hover:text-black">
            <button class="mt-3 md:mt-2">
              <span class="mr-1"><ion-icon name="receipt"></ion-icon></span>History
            </button>
          </a>
        </div>
        <div class="w-full mt-10 mb-6 flex flex-col items-center justify-center md:w-1/2">
          <p class="text-white text-xs md:text-base">Invite Your Friends</p>
          <div class="ml-10 h-10 w-auto mt-4 border-gold border-2 rounded-md md:ml-0">
            <a onclick="copy()">
              <p id="referral-link" class="text-white text-center px-2 mt-2.5 text-xs md:text-base md:mt-1">
                http://127.0.0.1:3000/user/create?ref=<%= user.userId %>
              </p>
            </a>
            <p class="text-xs mt-4 font-thin text-center text-gray-400 md:text-sm"> <span><ion-icon
                  name="information-circle-outline"></ion-icon></span> Tap the link to copy it to your CLIPBOARD</p>
          </div>
        </div>
      </div>
      <div class="mt-5 flex flex-col justify-center items-center w-full">
        <p class="text-xs md:text-base text-white">Available Balance</p>
        <h1 class="mt-2 text-gold text-2xl md:text-4xl"> ₦<%=user.balance %>
        </h1>
      </div>
      <div class="mt-5 flex justify-evenly items-center w-full flex-row">
        <div class="ml-10 md:ml-0">
          <p class="text-xs md:text-base text-white">Total Deposit</p>
          <h1 class="mt-1 mb-3 text-gold text-xl md:text-2xl">
            ₦
            <%= deposits.reduce( (total, current)=> total + current.amount, 0)%>
          </h1>
          <a href="#"
            class="cursor-pointer mt-1 duration-700 text-xs md:text-base rounded-lg bg-paleGreen px-4 py-2 text-black hover:bg-white">
            <button class="mt-3 md:mt-2">
              <span class="mr-1"><ion-icon name="download"></ion-icon></span>Deposit
            </button>
          </a>
        </div>
        <div>
          <p class="text-xs md:text-base text-white">Total Withdraw</p>
          <h1 class="mt-1 mb-3 text-gold text-xl md:text-2xl">
            ₦
            <%= withdrawals.reduce( (total, current)=> total + current.amount, 0)%>
          </h1>
          <a href="#"
            class="cursor-pointer duration-700 text-xs md:text-base rounded-lg bg-gold px-4 py-2 text-black hover:bg-white">
            <button class="mt-3 md:mt-2">
              <span class="mr-1"><ion-icon name="share"></ion-icon></span>Withdraw
            </button>
          </a>
        </div>
      </div>
      <div
        class="w-full p-4 flex flex-row justify-between items-center bg-gold mt-10 border-b-4 border-white md:w-auto">
        <p class="ml-20 text-xs md:text-base">Financial Record</p>
        <a href="/user/invest"
          class="cursor-pointer duration-700 text-xs rounded-md bg-paleGreen px-4 h-10 text-black md:text-base hover:bg-white">
          <button class="mt-3 md:mt-2">
            <span class="mr-1"><ion-icon name="stats-chart"></ion-icon></span>Invest
          </button>
        </a>
      </div>
      <div class="flex flex-col">
        <div class="ml-20 space-y-4 mt-10 flex flex-row justify-evenly flex-wrap text-center">
          <div class="mr-1">
            <p class="text-xs mt-4 md:text-base text-white">Account Balance</p>
            <h1 class="mt-1 text-gold text-xl md:text-2xl">
              ₦<%= user.balance %>
            </h1>
          </div>
          <div class="mr-1">
            <p class="text-xs md:text-base text-white">Account Investment</p>
            <h1 class="mt-1 text-gold text-xl md:text-2xl">
              <%= investments.length %>
            </h1>
          </div>
          <div class="mr-1">
            <p class="text-xs md:text-base text-white">Total Deposit</p>
            <h1 class="mt-1 text-gold text-xl md:text-2xl"> ₦
              <%= deposits.reduce( (total, current)=> total + current.amount, 0)%>
            </h1>
          </div>
          <div>
            <p class="text-xs md:text-base text-white">Total Withdraw</p>
            <h1 class="mt-1 text-gold text-xl md:text-2xl">₦
              <%= withdrawals.reduce( (total, current)=> total + current.amount, 0)%>
            </h1>
          </div>
        </div>
        <div class="ml-20 space-y-4 mt-5 flex flex-row justify-evenly flex-wrap text-center md:mt-10">
          <div class="">
            <p class="text-xs mt-4 md:text-base text-white">Total Earning</p>
            <h1 class="mt-1 text-gold text-xl md:text-2xl">₦
              <%= earnings.reduce( (total, current)=> total + current.amount, 0)%>
            </h1>
          </div>
          <div>
            <p class="text-xs md:text-base text-white">Last Deposit</p>
            <h1 class="mt-1 text-gold text-xl md:text-2xl">
              ₦
              <%= deposits.length> 0 ? deposits.at(-1).amount : 0 ;%>
            </h1>
          </div>
          <div>
            <p class="text-xs md:text-base text-white">Last Withdraw</p>
            <h1 class="mt-1 text-gold text-xl md:text-2xl">
              ₦
              <%= withdrawals.length> 0 ? withdrawals.at(-1).amount : 0; %>
            </h1>
          </div>
          <div>
            <p class="text-xs md:text-base text-white">Reg Date</p>
            <h1 class="mt-1 text-gold text-xl md:text-2xl">
              <%= user.createdAt.toLocaleDateString() %>
            </h1>
          </div>
        </div>
      </div>
      <div class="ml-20 flex items-center justify-center mt-20">
        <a href="/user/transactions"
          class="cursor-pointer duration-700 text-xs rounded-md border-gold border-2 px-4 h-10 text-gold hover:border-white hover:text-white md:text-base">

          <span class="mr-1"><ion-icon class="text-2xl duration-700 hover:text-gold"
              name="documents"></ion-icon></span>Show All Transactions

        </a>
      </div>
    </section>
  </div>
  <%- include ("partials/script"); -%>
    <script src="../JS/referral.js"></script>
</body>

</html>