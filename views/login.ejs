<body class="bg-brightBlue relative flex items-center h-full">
  <section id="main-section">
    <div class="flex items-center justify-center w-screen h-screen">
      <div class="w-96 pb-2 bg-lightGray text-center rounded-lg shadow-2xl ease-in-out duration-1000 hover:shadow-none">
        <img class="w-16 mx-auto mt-4" src="../Images/Logo.png" alt="Prime Finance Limited Logo" />
        <h1 class="text-4xl mt-4 text-darkBlue font-extrabold">Login</h1>
        <p class="text-sm mt-2 text-brightBlue">Welcome Back</p>


        <% if( alert?.message ){ %>
          <div class="toast <%= alert.status %> ">
            <p class="toast__message">
              <%= alert.message %>
            </p>
            <button>&times;</button>
          </div>
          <% } %>

            <form action="/user/login" method="post" id="login">
              <p class="mt-10">
                <input
                  class="bg-white border-primaryBlue border-solid border-2 ml-1 p-2 w-80 rounded-lg placeholder:text-center placeholder:font-light placeholder:text-sm placeholder:text-gray-400 focus:outline-brightBlue"
                  type="email" id="email" name="email" placeholder="Enter Your Email Address" required />
              </p>

              <p class="mt-6 flex justify-center mr-2">
                <input
                  class="bg-white border-primaryBlue border-solid border-2 ml-1 p-2 w-80 rounded-lg placeholder:text-center placeholder:font-light placeholder:text-sm placeholder:text-gray-400 focus:outline-brightBlue"
                  type="password" id="myPassword" name="password" placeholder="Enter Your Password" required />
                <i class="fas fa-eye -ml-6 mt-3.5" id="eye" onclick="myFunction()"></i>
              </p>

              <p class="mt-6">
                <button type="submit"
                  class="flex flex-row mx-auto justify-center items-center py-2 px-10 w-80 duration-500 text-darkBlue border-2 border-brightBlue rounded-lg hover:bg-brightBlue hover:text-lightGray">Login <ion-icon class="text-3xl ml-4" name="enter-outline"></ion-icon></button>
              </p>

              <p class="mt-4 space-x-16">
                <a class="text-sm hover: text-darkBlue hover:text-brightBlue" href="/user/forgot-password">Forgot Password</a>
                <a class="text-sm hover: text-darkBlue hover:text-brightBlue" href="/user/create">Sign Up</a>
              </p>
            </form>

      </div>
    </div>
  </section>
  <canvas class="background absolute top-0 left-0 right-0 bottom-0 -z-10"></canvas>
  <!-- Iconic Icon Scripts -->
  <script
  type="module"
